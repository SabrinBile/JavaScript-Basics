// main.js

// Part 1: Data Types

// Create variables of different data types
let stringVar = "Hello, World!";         // String
let numberVar = 42;                     // Number
let booleanVar = true;                  // Boolean
let nullVar = null;                     // Null
let undefinedVar;                       // Undefined
let objectVar = { key: "value" };       // Object
let symbolVar = Symbol("description");  // Symbol

// Print these variables to the console
console.log("String Variable: ", stringVar);
console.log("Number Variable: ", numberVar);
console.log("Boolean Variable: ", booleanVar);
console.log("Null Variable: ", nullVar);
console.log("Undefined Variable: ", undefinedVar);
console.log("Object Variable: ", objectVar);
console.log("Symbol Variable: ", symbolVar);
// main.js

// Part 1: Data Types

// Create variables of different data types
let stringVar = "Hello, World!";         // String
let numberVar = 42;                     // Number
let booleanVar = true;                  // Boolean
let nullVar = null;                     // Null
let undefinedVar;                       // Undefined
let objectVar = { key: "value" };       // Object
let symbolVar = Symbol("description");  // Symbol

// Print these variables to the console
console.log("String Variable: ", stringVar);
console.log("Number Variable: ", numberVar);
console.log("Boolean Variable: ", booleanVar);
console.log("Null Variable: ", nullVar);
console.log("Undefined Variable: ", undefinedVar);
console.log("Object Variable: ", objectVar);
console.lo// Part 2: Arrays

// 1. Create an array of numbers
let numbers = [5, 8, 12, 15, 22, 7, 3];
console.log("Original Array: ", numbers);

// 2. Use the map method to create a new array where each number is multiplied by 2
let multipliedByTwo = numbers.map(num => num * 2);
console.log("Array Multiplied by 2: ", multipliedByTwo);

// 3. Use the filter method to create a new array that only includes numbers greater than 10
let greaterThanTen = numbers.filter(num => num > 10);
console.log("Numbers Greater Than 10: ", greaterThanTen);

// 4. Use the reduce method to find the sum of all numbers in the array
let sum = numbers.reduce((accumulator, num) => accumulator + num, 0);
console.log("Sum of All Numbers: ", sum);

// 5. Use the forEach method to print each number in the array to the console
console.log("Numbers in Array:");
numbers.forEach(num => console.log(num));
g("Symbol Variable: ", symbolVar);
